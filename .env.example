# Application Environment
NODE_ENV=development
VITE_APP_ENV=development # development, preview, or production

# Sentry Configuration
SENTRY_AUTH_TOKEN=your-auth-token # Required for source map uploads
SENTRY_ORG=log-on # Your Sentry organization slug
SENTRY_PROJECT=portfolio-roboy # Your Sentry project slug
SENTRY_ENVIRONMENT=development # Matches VITE_APP_ENV
VITE_SENTRY_DSN=your-dsn-url # Project DSN from Sentry dashboard
VITE_ENABLE_SENTRY=true # Enable/disable Sentry integration
VITE_SENTRY_TRACES_SAMPLE_RATE=1.0 # Performance monitoring sample rate (0.0 to 1.0)
VITE_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1 # Session replay sample rate (0.0 to 1.0)
VITE_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0 # Error replay sample rate (0.0 to 1.0)

# Netlify Configuration
NETLIFY_SITE_ID=your_site_id_here
NETLIFY_AUTH_TOKEN=your_netlify_token_here

# Build Configuration
CI=true # Set to true in CI environment

# API URLs
VITE_API_URL=http://localhost:3000
VITE_SITE_URL=http://localhost:3000

# Feature Flags
VITE_ENABLE_ANALYTICS=false
